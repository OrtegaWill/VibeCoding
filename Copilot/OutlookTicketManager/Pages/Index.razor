@page "/"
@using Microsoft.AspNetCore.Components
@inject NavigationManager Navigation

<PageTitle>Outlook Ticket Manager</PageTitle>

<div class="container-fluid">
    <div class="row justify-content-center align-items-center min-vh-100">
        <div class="col-lg-8 col-md-10">
            <div class="card shadow-lg border-0">
                <div class="card-body text-center p-5">
                    <div class="mb-4">
                        <i class="fas fa-ticket-alt fa-4x text-primary mb-3"></i>
                        <h1 class="display-4 font-weight-bold text-primary">Outlook Ticket Manager</h1>
                        <p class="lead text-muted">Sistema integral de gestión de tickets basado en correos de Outlook 365</p>
                    </div>

                    <div class="row mb-4">
                        <div class="col-md-4 mb-3">
                            <div class="feature-box p-4 h-100">
                                <i class="fas fa-envelope-open-text fa-2x text-success mb-3"></i>
                                <h5>Importación Automática</h5>
                                <p class="text-muted">Convierte emails de Outlook en tickets de soporte automáticamente</p>
                            </div>
                        </div>
                        <div class="col-md-4 mb-3">
                            <div class="feature-box p-4 h-100">
                                <i class="fas fa-chart-line fa-2x text-info mb-3"></i>
                                <h5>Dashboard Inteligente</h5>
                                <p class="text-muted">Visualiza estadísticas y métricas en tiempo real</p>
                            </div>
                        </div>
                        <div class="col-md-4 mb-3">
                            <div class="feature-box p-4 h-100">
                                <i class="fas fa-users-cog fa-2x text-warning mb-3"></i>
                                <h5>Gestión Colaborativa</h5>
                                <p class="text-muted">Asigna, comenta y gestiona tickets en equipo</p>
                            </div>
                        </div>
                    </div>

                    <div class="mb-4">
                        <button class="btn btn-primary btn-lg me-3" @onclick="GoToDashboard">
                            <i class="fas fa-tachometer-alt me-2"></i>
                            Ir al Dashboard
                        </button>
                        <button class="btn btn-outline-secondary btn-lg" @onclick="GoToImport">
                            <i class="fas fa-download me-2"></i>
                            Importar Emails
                        </button>
                    </div>

                    <div class="text-muted">
                        <small>
                            <i class="fas fa-shield-alt me-1"></i>
                            Integración segura con Microsoft Graph API
                        </small>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

<style>
    .min-vh-100 {
        min-height: 100vh;
        background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
    }

    .card {
        border-radius: 20px;
        backdrop-filter: blur(10px);
        background-color: rgba(255, 255, 255, 0.95);
    }

    .feature-box {
        background-color: #f8f9fa;
        border-radius: 15px;
        transition: transform 0.3s ease, box-shadow 0.3s ease;
    }

    .feature-box:hover {
        transform: translateY(-5px);
        box-shadow: 0 10px 25px rgba(0,0,0,0.1);
    }

    .btn-lg {
        padding: 12px 30px;
        border-radius: 25px;
        font-weight: 600;
        text-transform: uppercase;
        letter-spacing: 0.5px;
        transition: all 0.3s ease;
    }

    .btn-primary:hover {
        transform: translateY(-2px);
        box-shadow: 0 8px 20px rgba(0,123,255,0.3);
    }

    .btn-outline-secondary:hover {
        transform: translateY(-2px);
        box-shadow: 0 8px 20px rgba(108,117,125,0.2);
    }

    .display-4 {
        font-weight: 700;
        background: linear-gradient(45deg, #667eea, #764ba2);
        -webkit-background-clip: text;
        -webkit-text-fill-color: transparent;
        background-clip: text;
    }

    @@media (max-width: 768px) {
        .display-4 {
            font-size: 2.5rem;
        }
        
        .btn-lg {
            display: block;
            width: 100%;
            margin-bottom: 10px;
        }
    }
</style>

@code {
    private void GoToDashboard()
    {
        Navigation.NavigateTo("/dashboard");
    }

    private void GoToImport()
    {
        Navigation.NavigateTo("/dashboard"); // Por ahora redirige al dashboard
    }
}
